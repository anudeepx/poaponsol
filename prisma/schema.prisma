generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id              String   @id @default(cuid())           
  eventPda        String   @unique                     
  name            String
  organizer       String                           
  collectionMint  String                       
  uri             String
  startTimestamp  BigInt
  endTimestamp    BigInt
  maxClaims       Int
  isActive        Boolean
  bump            Int
  claimRecords    ClaimRecord[]
}

model ClaimRecord {
  id              String   @id @default(cuid())            
  claimPda        String   @unique                         
  wallet          String                                   
  eventPda        String                                   
  mint            String                                   
  collectionMint  String
  claimedAt       BigInt
  eventName       String
  eventUri        String

  event           Event?   @relation(fields: [eventPda], references: [eventPda])
}

model OrganizerProfile {
  id           String  @id @default(cuid())               
  profilePda   String  @unique                            
  organizer    String                                     
  eventCount   BigInt
}

model CollectionAuthority {
  id             String  @id @default(cuid())             
  authorityPda   String  @unique                          
  bump           Int
  creator        String                                   
  collection     String                                   
  nftName        String
  nftUri         String
}